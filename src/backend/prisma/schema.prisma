generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Treino {
  id                   String          @id @default(uuid())
  nome                 String
  prazoVencimentoDias  Int
  createdAt            DateTime        @default(now())
  exercicios           Exercicio[]
  sessoes              Sessao[]
  notificacoes         Notificacao[]
}

model Exercicio {
  id         String  @id @default(uuid())
  treinoId   String
  nome       String
  series     Int
  repeticoes Int
  peso       Float
  treino     Treino  @relation(fields: [treinoId], references: [id], onDelete: Cascade)
}

model Sessao {
  id        String   @id @default(uuid())
  treinoId  String
  dataHora  DateTime @default(now())
  treino    Treino   @relation(fields: [treinoId], references: [id], onDelete: Cascade)

  @@index([treinoId, dataHora])
}

model Notificacao {
  id          String   @id @default(uuid())
  treinoId    String
  tipo        String   @default("vencido")
  mensagem    String
  visualizada Boolean  @default(false)
  createdAt   DateTime @default(now())
  treino      Treino   @relation(fields: [treinoId], references: [id], onDelete: Cascade)

  @@index([visualizada, createdAt])
}

